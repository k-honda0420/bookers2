


<h1>New book</h1>
<%= form_with(model:book, url:books_path(book), method: :POST, local:true) do |f| %>

<div>
  <%= f.label :Title %>
</div>
<div>
  <%= f.text_field :title %>
</div>
<div>
  <%= f.label :Opinion %>
</div>
<div>
  <%= f.text_area :body %>
  
</div>
<br>
  <%= f.submit 'Create Book' %>

<% end %>