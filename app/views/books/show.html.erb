<div class="container">
  <div class="row">
    
   <div class="col-md-3">
     <h1>User info</h1>

<div class="profile-container">
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <hr>
  <table>
  <th><h3>name</h3></th>
  <th><h3><%= @user.name %></h3></th>
  </table>
  <hr>
 <h3>introduction</h3>
  <h3><%= @user.introduction %></h3>
    <%= link_to edit_user_path(@user), class:"btn btn-primary col-xs-5 col-xs-offset-5" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
</div>
      
      
      <%= render 'books/book', book: @book_new %>
    </div>

<!-- この行を追加 -->

<div class="col-md-8 offset-md-1"> 
<h1>Book detail</h1>
      <table class="table booktable-show">
          <tr>
              <td><%= link_to user_path(@user) do %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%><br>
                  <%= @user.name %>
                  <% end %>
                </td>
              <td><%= link_to book_path(@book) do %>
                  <%= @book.title %>
                  <% end %>
                </td>
              <td><%= @book.body %></td>
              <% if @book.user_id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "消しますか？"}, class:"btn btn-danger" %></td>
              <% end %>
          </tr>
        </table>
</div>
</div>