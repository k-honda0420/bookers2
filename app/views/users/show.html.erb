
<div class="container">
  <div class="row">
    
   <div class="col-md-3">
     <h1>User info</h1>
     
<div class="profile-container">
  <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
  <hr>
  <table>
  <th><h3>name</h3></th>
  <th><h3><%= @user.name %></h3></th>
  </table>
  <hr>
 <h3>introduction</h3>
  <h3><%= @user.introduction %></h3>
    <%= link_to edit_user_path(@user), class:"btn btn-primary col-xs-5 col-xs-offset-5" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
</div>
     
     <%= render 'books/book', book: @book_new %>
   </div>
   
   <!-- この行を追加 -->
   <div class="col-md-8 offset-md-1"> 
     <h1>Book detail</h1>
        <table class="table booktable-show">
          <% @books.each do |book| %>
          <tr>
              <td><%= link_to user_path(@user) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg"%>
              <% end %>
              </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
            <% end %>
          </tr>
      </div>
    </div>
  </div>
